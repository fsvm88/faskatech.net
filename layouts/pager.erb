<ul class="pager" id="pagerContainer">
	<li class="previous previousPagerButton<%= @item_id == @last_id ? " disabled" : "" %>"><%= link_to('Older posts', get_older_link(@item_id, @last_id)) %></li>
	<li class="next nextPagerButton<%= @item_id == 0 ? " disabled" : "" %>"><%= link_to('Newer posts', get_newer_link(@item_id)) %></li>
</ul>
