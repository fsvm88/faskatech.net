<ul class="pager" id="pagerContainer">
	<li class="previous previousPagerButton" id="previousPagerButtonTop"><a>&larr; Older posts</a></li>
	<li class="next nextPagerButton" id="nextPagerButtonTop"><a>Newer posts &rarr;</a></li>
</ul>
<% sorted_articles.each do |post| %>
	<div class='post'>
		<h3><%= link_to post[:title], post.path %></h3>
		<aside>Posted at: <%= post[:created_at] %></aside>
		<article>
			<%= post.compiled_content %>
		</article>
	</div>
<% end %>
<ul class="pager" id="pagerContainer">
	<li class="previous previousPagerButton" id="previousPagerButtonBottom"><a>&larr; Older posts</a></li>
	<li class="next nextPagerButton" id="nextPagerButtonBottom"><a>Newer posts &rarr;</a></li>
</ul>
